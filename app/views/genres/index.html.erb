<h1><%= pluralize(@genres.size, "Genre") %></h1>
<ul class="users">
    <% @genres.each do |genre| %>
        <li>
            <%= link_to genre.name, genre %>
            has
            <%= pluralize(total_movies_for_genre(genre), "Movie") %>
        </li>
    <% end %>
</ul>

<% if current_user_admin? %>
    <section class="admin">
        <%= link_to "Add New Genre", new_genre_path, class: "button"%>
    </section>
<% end %>